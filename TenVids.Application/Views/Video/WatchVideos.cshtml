@using TenVids.Services.Extensions
@using TenVids.Utilities
@model WatchVideoVM

<style>
    /* Styling for the video player */
    video {
        width: 100%;
        border-radius: 12px;
        outline: none;
    }

    /* Container for video actions such as like, dislike, etc. */
    .video-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 12px;
        padding-bottom: 16px;
        border-bottom: 1px solid #e5e5e5;
    }

    /* Styling for video title */
    .video-title {
        font-size: 1.4rem;
        font-weight: 500;
        margin: 12px 0;
    }

    /* Container for video stats like views and date */
    .video-stats {
        display: flex;
        align-items: center;
        color: #606060;
        font-size: 0.9rem;
    }

    /* Action buttons for liking, disliking, etc. */
    .action-buttons {
        display: flex;
        gap: 8px;
    }

    .like-dislike-container {
        display: flex;
        align-items: center;
        background: #f9f9f9;
        border-radius: 18px;
        overflow: hidden;
        height: 36px;
    }

    .like-section, .dislike-section {
        display: flex;
        align-items: center;
        padding: 0 12px;
        height: 100%;
        cursor: pointer;
        color: #606060;
    }

    .like-section {
        border-right: 1px solid #e5e5e5;
    }

        .like-section.active {
            background: rgba(6, 95, 212, 0.1);
            color: #065fd4;
        }

    .dislike-section.active {
        background: rgba(6, 95, 212, 0.1);
        color: #065fd4;
    }

    .action-button {
        display: flex;
        align-items: center;
        padding: 0 12px;
        background: #f9f9f9;
        border-radius: 18px;
        cursor: pointer;
        height: 36px;
        color: #606060;
        font-size: 0.9rem;
        font-weight: 500;
    }

        .action-button:hover {
            background: #f0f0f0;
        }

        .action-button i {
            margin-right: 6px;
            font-size: 1.1rem;
        }

    /* Channel info styling */
    .channel-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 12px;
    }

    .channel-text {
        display: flex;
        flex-direction: column;
    }

    .channel-name {
        font-weight: 500;
        color: #030303;
    }

    .subscriber-count {
        color: #606060;
        font-size: 0.8rem;
    }

    .subscribe-btn {
        transition: all 0.3s ease;
        min-width: 100px;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
    }

    /* Suggested videos styling */
    .suggested-video img {
        width: 100%;
        max-height: 180px;
        object-fit: cover;
        border-radius: 8px;
    }

    .suggested-video {
        margin-bottom: 15px;
    }

    /* Flexbox layout for main video and suggested videos */
    .row {
        display: flex;
        flex-wrap: nowrap;
    }

    .col-lg-9 {
        flex: 0 0 75%; /* Main video takes up 75% of the width */
        padding-right: 20px;
    }

    .col-lg-3 {
        flex: 0 0 25%; /* Suggested videos take up 25% of the width */
        padding-left: 20px;
    }

    /* Added margin between main video and suggested videos */
    .suggested-video-container {
        margin-top: 20px;
    }
</style>

<a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">Back</a>

<div class="row mt-3">
    <!-- Main Video Section -->
    <div class="col-lg-9">
        <video controls>
            <source src="/Video/GetVideoFile?videoId=@Model.Id" type="video/mp4" />
            Your browser does not support the video tag.
        </video>

        <h1 class="video-title">@Model.Title</h1>

        <div class="video-actions">
            <div class="video-stats">
                <span id="view-count">@Model.ViewsCount.ToString("N0") views</span>
                <span style="margin: 0 4px;">•</span>
                <span>@SD.TimeAgo(Model.CreatedAt)</span>
            </div>

            <div class="action-buttons">

                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="like-dislike-container" hidden>

                        <div class="like-section @(Model.IsLiked ? "active" : "")" id="likeBtn" onclick="likeDislike('likeBtn', 'like')">
                            <i class="bi bi-hand-thumbs-up-fill"></i>
                            <span>@SD.FormatView(Model.LikesCount)</span>
                        </div>
                        <div class="dislike-section @(Model.IsDisliked ? "active" : "")" id="dislikeBtn" onclick="likeDislike('dislikeBtn', 'dislike')">
                            <i class="bi bi-hand-thumbs-down-fill"></i>
                            <span>@SD.FormatView(Model.DislikesCount)</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="like-dislike-container" >

                        <div class="like-section @(Model.IsLiked ? "active" : "")" id="likeBtn" onclick="likeDislike('likeBtn', 'like')">
                            <i class="bi bi-hand-thumbs-up-fill"></i>
                            <span>@SD.FormatView(Model.LikesCount)</span>
                        </div>
                        <div class="dislike-section @(Model.IsDisliked ? "active" : "")" id="dislikeBtn" onclick="likeDislike('dislikeBtn', 'dislike')">
                            <i class="bi bi-hand-thumbs-down-fill"></i>
                            <span>@SD.FormatView(Model.DislikesCount)</span>
                        </div>
                    </div>
                }


                <form method="post">
                    <button asp-action="DownloadVideo" asp-route-videoId="@Model.Id" type="submit" class="action-button">
                        <i class="bi bi-download"></i>
                        <span>Download</span>
                    </button>
                </form>
            </div>
        </div>

        <!-- Channel Info Section -->
        <div class="channel-info">
            <div class="channel-text">
                <a asp-action="Channel" asp-controller="Member" class="text-danger text-decoration-none">@Model.ChannelName</a>
                <span class="subscriber-count">@SD.FormatView(Model.SubscribersCount) subscribers</span>

                
            </div>
            @if (!User.Identity.IsAuthenticated)
            {
                <button id="subscribeBtn" disabled class="btn @(Model.IsSubscribed ? "btn-success" : "btn-danger")">
                    @(Model.IsSubscribed ? "Subscribed ✓" : "Login To Subscribe")
                </button>
            }else{
                <button id="subscribeBtn" class="btn @(Model.IsSubscribed ? "btn-success" : "btn-danger")">
                    @(Model.IsSubscribed ? "Subscribed ✓" : "Subscribe")
                </button>
            }
           
        </div>

        <div class="mt-4 ">
            <partial name="_CommentPartial" model="@Model.CommentVM" />
        </div>
    </div>

    <!-- Suggested Videos Section -->
    <div class="col-lg-3 suggested-video-container">
        <h4>Suggested Videos</h4>
        <ul class="list-unstyled">
            @foreach (var suggestedVideo in Model.SuggestedVideos)
            {
                <li>
                    <a href="@Url.Action("WatchVideos", "Video", new { id = suggestedVideo.Id })" class="text-decoration-none">
                        <div class="suggested-video">
                            <img src="@suggestedVideo.Thumbnail" alt="@suggestedVideo.Title" class="img-fluid" />
                            <p>@suggestedVideo.Title</p>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>


@section Scripts {
    <input type="hidden" id="videoId" value="@Model.Id" />
    <input type="hidden" id="channelId" value="@Model.ChannelId" />
    <script src="~/js/videoInteractions.js"></script>
}
