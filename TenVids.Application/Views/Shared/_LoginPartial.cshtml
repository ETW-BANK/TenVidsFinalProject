@using TenVids.Utilities
@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <span class="nav-link text-info-emphasis">
                <i class="bi bi-person-circle"></i>
                @User.GetEmail()
            </span>
        </li>
        @if (User.IsInRole(SD.UserRole))
        {
            <li class="nav-item">
                <a class="btn btn-secondary me-2" asp-area="" asp-controller="Channel" asp-action="Index">
                    <i class="bi bi-tv-fill"></i>
                    Channel
                </a>
            </li>
        }
        <li class="nav-item">
            <a class="btn btn-secondary bg-danger me-2" asp-area="" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-box-arrow-left"></i>
                Logout
            </a>
        </li>
    </ul>
}
else
{
    <div class="me-1">
        <a class="btn btn-secondary me-2" asp-action="Login" asp-controller="Account">
            <i class="bi bi-box-arrow-in-right"></i>
            Login
        </a>
        <a class="btn btn-secondary me-2" asp-action="Register" asp-controller="Account">
            <i class="bi bi-person-plus-fill"></i>
            Register
        </a>
    </div>
}
